        android:supportsRtl="true"
        android:theme="@style/Theme.NetmedsAndroidTestProject"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.activities.FingerPrintAuthenticationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.SearchInPixabayActivity"
            android:windowSoftInputMode="adjustPan">
            <!--  <intent-filter>
                  <action android:name="android.intent.action.MAIN" />
                  <category android:name="android.intent.category.LAUNCHER" />
              </intent-filter>-->
        </activity>
        <activity android:name=".ui.activities.ImageDetailsActivity" />
    </application>

</manifest>